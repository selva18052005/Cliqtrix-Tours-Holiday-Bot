# Zoho Configuration
ZOHO_API_KEY=your_zoho_api_key_here
ZOHO_API_URL=https://www.zohoapis.com
ZOHO_WEBHOOK_URL=https://your-domain.com/api/webhook

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cliqtrix
MONGODB_NAME=cliqtrix_tours_holidays

# Server Configuration
PORT=5000
NODE_ENV=development

# OAuth Configuration
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_REDIRECT_URI=https://your-domain.com/oauth/callback

# SalesIQ Configuration
SALESIQ_BOT_ID=your_salesiq_bot_id
SALESIQ_WIDGET_ID=your_salesiq_widget_id

# CRM Integration
CRM_API_URL=https://your-crm-api.com
CRM_API_KEY=your_crm_api_key

# Email Configuration (for invoice sending)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Debug
DEBUG=true
